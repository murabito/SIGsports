<main>
  <section class="slider">
    <%= image_tag 'featured/mens_basketball/alex_len', class: 'slider-img' %>
    <%= image_tag 'featured/mens_basketball/anosike', class: 'slider-img' %>
    <%= image_tag 'featured/mens_basketball/brandt', class: 'slider-img' %>
    <%= image_tag 'featured/mens_basketball/tarik_lakers', class: 'slider-img' %>
  </section>
  <section class="news-section">
    <h2>Men's Basketball News</h2>

    <% @news_articles.each do | article | %>
      <a href="<%= article.url %>">
        <h3 class="red"><%= article.headline %></h3>
        <h4><%= article.date_posted %></h4>
      </a>
    <% end %>
  </section>
</main>
