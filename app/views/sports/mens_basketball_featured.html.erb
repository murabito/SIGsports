<main>
  <section id="featured">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <img src="https://s3.amazonaws.com/sig-sports/images/featured/mens_basketball/photo1.jpg" class="featured-img" />
        </div>

        <div class="item">
          <img src="https://s3.amazonaws.com/sig-sports/images/featured/mens_basketball/photo2.jpg" class="featured-img" />
        </div>
      </div>
    </div>
  </section>

  <section class="news-section">
    <h2>Mens Basketball News</h2>

    <% @news_articles.each do | article | %>
      <a href="<%= article.url %>">
        <h3 class="red"><%= article.headline %></h3>
        <h4><%= article.date_posted %></h4>
      </a>
    <% end %>
  </section>
</main>
