<main class="grid">
  <header class="filter-header">
    <ul class="right-filter">
      <li><%= link_to 'All', football_path, class: "filter-link" %></li>
      <li><%= link_to 'Available', football_path(available: true), class: "filter-link" %></li>
      <li><%= link_to 'Unavailable', football_path(available: false), class: "filter-link" %></li>
    </ul>
  </header>
  <% 9.times do |_| %>
    <%= render partial: 'athlete', collection: @athletes %>
  <% end %>
</main>