<main>
  <section id="featured">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag "featured/football/photo1", class: 'featured-img' %>
        </div>

        <div class="item">
          <%= image_tag "featured/football/photo2", class: 'featured-img' %>
        </div>

        <div class="item">
          <%= image_tag "featured/football/photo3", class: 'featured-img' %>
        </div>

        <div class="item">
          <%= image_tag "featured/football/photo5", class: 'featured-img' %>
        </div>

        <div class="item">
          <%= image_tag "featured/football/photo4", class: 'featured-img' %>
        </div>
      </div>
    </div>
  </section>

  <section class="news-section">
    <h2>Football News</h2>

    <% @news_articles.each do | article | %>
      <a href="<%= article.url %>">
        <h3 class="red"><%= article.headline %></h3>
        <h4><%= article.date_posted %></h4>
      </a>
    <% end %>
  </section>
</main>
