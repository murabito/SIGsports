<main>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
      <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <%= image_tag "featured/football/photo1" %>
      </div>

      <div class="item">
        <%= image_tag "featured/football/photo2" %>
      </div>

      <div class="item">
        <%= image_tag "featured/football/photo3" %>
      </div>

      <div class="item">
        <%= image_tag "featured/football/photo5" %>
      </div>

      <div class="item">
        <%= image_tag "featured/football/photo4" %>
      </div>
    </div>
  </div>

  <section class="news-section">
    <h2>Football News</h2>

    <% @news_articles.each do | article | %>
      <a href="<%= article.url %>">
        <h3 class="red"><%= article.headline %></h3>
        <h4><%= article.date_posted %></h4>
      </a>
    <% end %>
  </section>
</main>
