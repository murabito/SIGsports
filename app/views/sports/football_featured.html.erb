<main>
  <section class="slider">
    <%= image_tag 'featured/football/photo1', class: 'slider-img' %>
    <%= image_tag 'featured/football/photo2', class: 'slider-img' %>
    <%= image_tag 'featured/football/photo3', class: 'slider-img' %>
    <%= image_tag 'featured/football/photo5', class: 'slider-img' %>
    <%= image_tag 'featured/football/photo4', class: 'slider-img' %>
  </section>
  <section class="news-section">
    <h2>Football News</h2>

    <% @news_articles.each do | article | %>
      <a href="<%= article.url %>">
        <h3 class="red"><%= article.headline %></h3>
        <h4><%= article.date_posted %></h4>
      </a>
    <% end %>
  </section>
</main>
